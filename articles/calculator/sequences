<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>数列/title>
</head>
<body>
  <h1>fibo数列</h1>
  <label for="n">n = </label>
  <input type="number" id="n" min="1" value="1" onchange="calculate()">
  <p id="result"></p>
  <script>
    function fibonacci(n) {
      if (n <= 2) {
        return 1;
      } else {
        return fibonacci(n - 1) + fibonacci(n - 2);
      }
    }

    function calculate() {
      const n = parseInt(document.getElementById("n").value);
      const result = fibonacci(n);
      document.getElementById("result").textContent = `F(${n}) = ${result}`;
    }

    calculate();
  </script>
</body>
</html>
